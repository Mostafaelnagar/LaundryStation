<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <data>

        <variable
            name="myOrderDetailItemViewModel"
            type="app.laundrystation.viewModels.MyOrderDetailItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="@dimen/dp8h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8h"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/dp8h"
            android:text="X"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
             app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:text="@{myOrderDetailItemViewModel.ItemCount}" />


        <ImageView
            android:id="@+id/item_Cat_Img"
            android:layout_width="@dimen/dp70w"
            android:layout_height="@dimen/dp70h"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/background"
            app:serviceImage="@{myOrderDetailItemViewModel.serviceImage}"
            app:layout_constraintEnd_toStartOf="@+id/txt_item_count"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_item_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8h"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"
             app:layout_constraintEnd_toStartOf="@+id/item_Cat_Img"
            app:layout_constraintTop_toTopOf="parent"
            app:text="@{myOrderDetailItemViewModel.ItemName}" />

        <TextView
            android:id="@+id/txt_Item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8h"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/cat_ironing"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"
             app:layout_constraintEnd_toStartOf="@+id/item_Cat_Img"
            app:layout_constraintTop_toBottomOf="@+id/txt_item_Name"
            app:text="@{myOrderDetailItemViewModel.ServiceType}" />

        <TextView
            android:id="@+id/txt_Item_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8h"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/dp8h"
            android:text="22"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
             app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:text="@{myOrderDetailItemViewModel.ItemPrice}" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp2h"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/item_Cat_Img" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <data>

        <variable
            name="notificationsViewModels"
            type="app.laundrystation.viewModels.NotificationsViewModels" />
    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txt_Laundry_Cat_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16h"
            android:layout_marginEnd="@dimen/dp8h"
            android:padding="@dimen/dp4h"
            android:text="@string/txt_notfications"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
             app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_Notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Laundry_Cat_Name"
            android:layout_marginTop="@dimen/dp4h"
            android:layout_marginBottom="@dimen/dp8h"
            app:notificationAdapter="@{notificationsViewModels.notificationAdapter}"
            app:notificationDetails="@{notificationsViewModels.notificationDetails}"
            tools:listitem="@layout/notification_item" />

    </RelativeLayout>
</layout>
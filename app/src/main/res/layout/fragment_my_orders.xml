<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <data>

        <variable
            name="orderViewModel"
            type="app.laundrystation.viewModels.MyOrdersViewModels" />
    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <TextView
            android:id="@+id/txt_Laundry_Cat_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            android:text="@string/order_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:onClick="@{() -> orderViewModel.back()}"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Laundry_Cat_Name"
            android:layout_marginTop="@dimen/dp20h"
            android:gravity="center_horizontal"
            android:text="@string/emptyOrders"
            android:visibility="@{orderViewModel.emptyOrders,default=gone}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_MyOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Laundry_Cat_Name"
            android:layout_marginBottom="@dimen/dp8h"
            android:layout_marginTop="8dp"
            app:myOrderAdapter="@{orderViewModel.myOrderAdapter}"
            app:myOrderDetails="@{orderViewModel.myOrderDetails}"
            tools:listitem="@layout/my_orders_item" />
    </RelativeLayout>
</layout>
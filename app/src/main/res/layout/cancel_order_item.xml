<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <data>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/cancelOrderReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp32h"
            android:layout_marginTop="@dimen/dp6h"
            android:layout_marginEnd="@dimen/dp32h"
            android:gravity="center_horizontal|center_vertical"
            android:hint="@string/cancelOrderReason"
            android:inputType="text"
            android:textSize="@dimen/sp14"
            app:layout_constraintTop_toBottomOf="@+id/userProfileImgae"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="?colorPrimary" />


        <Button
            android:id="@+id/cancelOrderBttun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8h"
            android:background="@color/colorPrimary"
            android:text="@string/waring_negative"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp18"
            />


    </LinearLayout>
</layout>
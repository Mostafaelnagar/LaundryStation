<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="notificationsItemViewModel"
            type="app.laundrystation.viewModels.NotificationsItemViewModels" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp12h"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_Laundry_Cat_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dp4h"
            android:padding="@dimen/dp4h"
            android:text="11 min"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:text="@{notificationsItemViewModel.Date}" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/dp8h"
            android:layout_marginTop="@dimen/dp16h"
            android:gravity="start"
            android:maxLines="1"
            android:padding="@dimen/dp4h"
            android:visibility="gone"
            android:text="some dummy text"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"
            app:text="@{notificationsItemViewModel.Title}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Laundry_Cat_Name"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/dp4h"
            android:gravity="start"
            android:padding="@dimen/dp4h"
            android:text="some dummy text"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"
            app:text="@{notificationsItemViewModel.Body}" />
    </RelativeLayout>

</layout>
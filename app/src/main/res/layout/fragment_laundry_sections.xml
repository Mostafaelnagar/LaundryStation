<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="laundrySectionsViewModel"
            type="app.laundrystation.viewModels.LaundrySectionsViewModel" />
    </data>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_Sections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:laundrySectionsAdapter="@{laundrySectionsViewModel.laundrySectionsAdapter}"
        app:laundrySections="@{laundrySectionsViewModel.laundrySections}"
        tools:listitem="@layout/sections_item" />
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <data>

        <variable
            name="laundryServicesItemViewModel"
            type="app.laundrystation.viewModels.LaundryServicesItemViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/mainlin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8h"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/itemsCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="8dp"
                        android:text="X"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:visibility="@{laundryServicesItemViewModel.countVisibility, default=invisible}"
                        app:text="@{laundryServicesItemViewModel.itemCount}" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/item_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp4h"
                    android:onClick="@{() -> laundryServicesItemViewModel.minusAction()}"
                    android:padding="8dp"
                    android:src="@drawable/ic_minus"
                    android:visibility="@{laundryServicesItemViewModel.minusVisibility, default=gone}" />
            </LinearLayout>


            <ImageView
                android:id="@+id/item_Cat_Img"
                android:layout_width="@dimen/dp50w"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp8w"
                android:layout_toEndOf="@+id/itemsCounter"
                android:scaleType="centerCrop"
                android:src="@mipmap/background"
                app:serviceImage="@{laundryServicesItemViewModel.serviceImage}" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/item_Cat_Img"
                android:layout_toStartOf="@+id/plusContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_item_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp8h"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/black"
                    app:text="@{laundryServicesItemViewModel.Name}" />

                <TextView
                    android:id="@+id/txt_Item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp8h"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/cat_ironing"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/black"
                    app:text="@{laundryServicesItemViewModel.type}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/plusContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center_vertical"
                android:gravity="end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_Item_Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4h"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="@dimen/dp4h"
                        android:text="22"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        app:text="@{laundryServicesItemViewModel.Ironing}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp4h"
                        android:layout_marginTop="@dimen/dp4h"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/coin"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/item_Plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp4h"
                    android:onClick="@{() -> laundryServicesItemViewModel.plusAction()}"
                    android:padding="@dimen/dp4h"
                    android:src="@drawable/ic_plus" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/mainlin"
            android:background="@color/colorPrimary" />
    </RelativeLayout>
</layout>